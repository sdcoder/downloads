@model LightStreamWeb.Models.PublicSite.ContactUsModel

<form ng-submit="submit()" name="contactUsForm">
    <div class="medium-12 columns">
        <h2 class="widget-headline-title" tabindex="0" style="border-bottom:0; outline: none;">
            Questions, comments, suggestions?
        </h2>
        <p class="error-message">{{model.ErrorMsg}}</p>

        <p class="description" tabindex="0" style="font-size:16px">
            Our online loan process is streamlined and intuitive - and we share our phone number with customers.
            If you have questions, comments or suggestions about our accessibility support services,
            please email us using the form below. We will respond promptly during our normal business hours, @FirstAgain.Domain.Common.BusinessConstants.Instance.BusinessHours.ToString(FirstAgain.Common.TimeZoneUS.EasternStandardTime).
        </p>

        <fieldset>
            <label for="Name">Name</label>
            <input type="text" name="Name" aria-label="Enter your first and last name." required placeholder="(required)" ng-model="model.Name">

            <label for="EmailAddress">Email</label>
            <input type="email" name="EmailAddress" aria-label="Enter your email address." required placeholder="(required)" ng-model="model.EmailAddress">

            <label for="Message">Questions or Comments</label>
            <textarea rows="10" cols="30" name="Message" aria-label="Enter your questions or comments." required placeholder="(required)" ng-model="model.Message"></textarea>

        </fieldset>
        
        <p tabindex="0">Thank you.</p>
       
        <div style="text-align:center;">
            <input type="submit" name="submit" value="Submit" class="button" style="width: 50%"/>
        </div>


        </div>
</form>

@model  string

<div id="lightstreamVideo">
    <iframe id="bannerVideo"
            style="height: 100%; width: 100%; padding: 0; margin: 0"
            width="640"
            height="360"
            gesture="media"
            allow="autoplay; fullscreen; encrypted-media"
            aria-hidden="true"
            tabindex="0"
            frameborder="0"
            webkitallowfullscreen
            mozallowfullscreen
            allowfullscreen
            src="@(String.Format("{0}?controls=1&rel=0&showinfo=0&autoplay=0&modestbranding=1&enablejsapi=1&html5=1&fs=0", @Model))"></iframe>
    </div>
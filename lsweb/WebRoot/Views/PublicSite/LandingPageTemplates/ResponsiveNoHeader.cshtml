@model LightStreamWeb.Models.PublicSite.LandingPageModel

@section metaTags {
    @Html.Partial("~/Views/PublicSite/Partials/_LandingPageMetaTags.cshtml")
}

@section header {
    <div hidden data-ls-api-base-url='@Model.PublicRestApiUri'></div>
    <div class="web-component">
        <lswc-legal-banner></lswc-legal-banner>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Content.PageAnnouncement))
    {
        <div class="row partner_disclaimer">
            <div class="small-12 small-centered columns">
                <p>@Html.Raw(Model.Content.PageAnnouncement)</p>
            </div>
        </div>
    }
    <header id="header" class="no-nav row widerow">

        <img src="@Model.Content.CenterGraphic.ToImageUrl()" class="hide-for-small-only banner" alt="@Model.Content.CenterGraphic.Alt" />

        <div class="row headline" ng-controller="LandingPageController">
            <h2 class="cms" tabindex="0">@Html.Raw(Model.Title)</h2>
            <h4 class="cms subtitle" tabindex="0">@Html.Raw(Model.Content.PageSubTitle ?? "&nbsp;")</h4>
            <div class="heroaction no-header clearfix">

                <div class="ratedetails" tabindex="0">
                    <p>Fixed rates as low as </p>
                    <h3 class="ratepercentage">@Html.FormatRateWithDataAttributes(Model.DisplayRate)</h3>
                    <p class="ratenote">APR with AutoPay</p>
                </div>

                <a href="/apply" class="button" onclick="SC.main.banner.applyNow()" ng-click="applyFor('@Model.PurposeOfLoan');">Apply Now</a>

                <p class="seeratesandterms no-header"><a href="#rates" target="_self" onclick="SC.main.banner.ratesAndTerms()">See Rates & Terms &raquo;</a></p>

            </div>
        </div>

    </header>
}

@Html.Partial("~/Views/Components/BestLoanExperienceGuaranteeRow.cshtml")
@Html.Partial("~/Views/Components/APRDisclosureShort.cshtml", Model.DisplayRate, new ViewDataDictionary() { { "isOneClickDisclosure", true } })

@if (Model.IfAnyFeatureBulletsDefined())
{
    <section class="row ruled homefeatures no-header">
        @if (!string.IsNullOrEmpty(Model.Content.BulletHeader))
        {
            <h3>@Html.Raw(Model.Content.BulletHeader)</h3>
        }
        else
        {
            <h3 class="hide-for-small-only banner" tabindex="0">A hassle-free loan that rewards you for good credit.</h3>
        }
        @foreach (var b in Model.FeatureBullets)
        {
            @Html.DisplayBullet(b)
        }
    </section>
}

@section mobileTestimonial{
    @if (Model.Content.DisplayCustomerTestimonialRow)
    {
        @Html.Action("FeaturedTestimonial", "Components", new { purpose = Model.PurposeOfLoan })
    }
}

<div class="row">
    <article class="cms">
        <h1>@Html.Raw(Model.Content.ArticleTitle)</h1>

        @Html.Raw(Model.Content.ArticleText)
    </article>
</div>

@section homeloanuses{
}
@section footer{
    <footer class="row">

        <nav class="medium-10 small-8 columns">
            <ul>
                <li><a href="/privacy-security">Privacy/Security</a></li>
            </ul>
        </nav>

        <article class="large-12 columns legalcopy">
            <p class="cms" id="PreDisclosuresFooter">@{Html.RenderAction("PreDisclosuresFooter", "Components");}</p>
            @Html.Partial("~/Views/Components/APRDisclosure2.cshtml", Model.DisplayRate)
            <p id="SameDayFundingDisclosure" class="legalcopy" />

            @if (!string.IsNullOrWhiteSpace(Model.Content.DisclosureCopy))
            {
                @Html.Raw(@ADAHelper.PreventMultipleBRsRepeatingBlank(Model.Content.DisclosureCopy))
            }

            <p class="cms" id="Footer">@{Html.RenderAction("Footer", "Components");}</p>

        </article>

        <div class="large-12 columns footer_images">
            <a href="/misc/plant-a-tree" data-open="PlantATreeModal" onclick="SC.main.plantaTree();"><img src="@Model.CdnBaseUrl/plant-a-tree-small.png" alt="We plant a tree with every loan" width="106" height="32" class="no-track" /></a>
            <a href="https://trustsealinfo.websecurity.norton.com/splash?form_file=fdf/splash.fdf&dn=www.lightstream.com&lang=en" data-jump="true" data-popup="true" data-name="NortonSecured" data-width="580" data-height="480"><img src="@Model.CdnBaseUrl/norton.png" alt="Norton Security Badge" width="132" height="68" /></a>
        </div>

    </footer>
}
@model LightStreamWeb.Models.PublicSite.BasePublicSiteModel

@section header {
    <script src="/scripts/swfobject.js" type="text/javascript"></script>
    <style>
        #birthdayCardContent {
            min-height: 600px;
            margin: auto;
            margin-top: 20px;
            margin-bottom: 20px;
            overflow: visible;
        }
    </style>
}

@section metaTags {
    <meta name="robots" content="noindex">
}

<section class="row">
    <div class="medium-12 columns text-center">
        <div id="birthdayCardContent">
            <script language="JavaScript" type="text/javascript">
                if (swfobject.hasFlashPlayerVersion("7")) {
                    swfobject.embedSWF('/content/images/happy-birthday/BdayCard_2013_1.swf', "birthdayCardContent", 900, 600, "7.0.0");
                }
                else {
                    var alternateContent = '<img src="/content/images/happy-birthday/BdayCard_2013_1.jpg" alt="Happy Birthday!" />';
                    document.write(alternateContent);
                }
            </script>
            <noscript>
                <img src="/content/images/happy-birthday/BdayCard_2013_1.jpg" alt="Happy Birthday!" />
            </noscript>
        </div>
    </div>
</section>

@section footer {
    @Html.Partial("~/Views/PublicSite/Partials/ecard-footer.cshtml")
}

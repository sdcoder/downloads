@model LightStreamWeb.Models.BaseCoBrandPageModel

<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    @Model.CanonicalTag()
    @RenderSection("metaTags", required: false)
    <meta name="description" content="@(Model.MetaDescription ?? "LightStream offers unsecured loans online for all their personal needs. On approval, money can be wired the next day to purchase anything including refinancing an existing loan, home improvement project, pre K-12 education, wedding, new or used auto, motorcycle, RV, adoption, fertility, medical expense, and more.")" />
    <meta name="keywords" content="@(Model.MetaKeywords ?? "excellent credit, car loan, home improvement financing, timeshare financing")" />
    <meta name="p:domain_verify" content="6e1593f79ecb274d20879334808eda06" />

    @Html.RenderScriptTag("~/bundles/scripts-adobe-target-bodyhiding.js")

    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/content/images/apple-touch-icon.png">
    @Styles.Render("~/bundles/css-third-party")
    <link rel="stylesheet" href="https://use.typekit.net/hrj0lrv.css" />
    @Styles.Render("~/bundles/css-responsive-main")
    @if (!IsSectionDefined("layout"))
    {
        @Styles.Render("~/bundles/css-responsive-main-wide")
    }
    else
    {
        @RenderSection("layout", required: false);
    }

    @RenderSection("styles", required: false)
    <script type="text/javascript" src="//LightStream.7eer.net/container-1695.js"></script>

    @if (Model.EnableRUM)
    {
        <script>
            var _prum = [['id', '54bd2fd4abe53db14dd8e5c9'],
            ['mark', 'firstbyte', (new Date()).getTime()]];
            (function () {
                var s = document.getElementsByTagName('script')[0]
                    , p = document.createElement('script');
                p.async = 'async';
                p.src = '//rum-static.pingdom.net/prum.min.js';
                s.parentNode.insertBefore(p, s);
            })();
        </script>

    }

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script type="text/javascript">window.jQuery || document.write('<script src="/scripts/jquery-3.4.1.min.js"><\/script>')</script>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/es5-shim")
    @Scripts.Render("~/bundles/es6-shim")
    @Scripts.Render("~/bundles/scripts-app-main")
    @Html.RenderScriptTag("~/bundles/scripts-marketing.js")
</head>


@Scripts.Render("~/bundles/main-page")

@if (!IsSectionDefined("bodyTag"))
{
        @:<body class="@Model.BodyClass"
      if (!string.IsNullOrWhiteSpace(Model.NgApp)) { @: ng-app="@Model.NgApp"
       @: id="ng-app"
      } @:>
}
else
{
    @RenderSection("bodyTag", required: false);
}

<div class="row center" style="padding: 0 2em 0 2em">
    <div class="large-12 nav-logo" role="navigation">

        @if (Model.PartnerLogo != null && Model.PartnerLogo.Length > 0)
        {
            <div class="thumb left">
                <a itemprop="url" href="/">
                    <img src="@Model.CdnBaseUrl/logo-transparent-blue.png" alt="LightStream, A Division of SunTrust Bank" />
                </a>
            </div>
        }
        else
        {
            <div class="thumb-small left">
                <a itemprop="url" href="/">
                    <img src="@Model.CdnBaseUrl/logo-transparent-blue.png" alt="LightStream, A Division of SunTrust Bank" />
                </a>
            </div>
        }

        <div class="filling"></div>

        @if (Model.PartnerLogo != null && Model.PartnerLogo.Length > 0)
        {
            <div class="thumb right">
                <img src="data:image;base64,@Convert.ToBase64String(Model.PartnerLogo)" alt="Partner Logo" />
            </div>
        }
    </div>
</div>


<div class="row center">
    @RenderBody()
</div>

@if (FirstAgain.Domain.Common.BusinessConstants.Instance.Environment == FirstAgain.Domain.Lookups.FirstLook.EnvironmentLookup.Environment.Production)
{
    <script type="text/javascript" src="https://ensighten.lightstream.com/suntrust/lightstream/Bootstrap.js"></script>
    <script type="text/javascript">window.dataLayer = window.dataLayer || [];</script>
}
else
{
    <script type="text/javascript" src="https://ensighten.lightstream.com/suntrust/lightstream-dev/Bootstrap.js"></script>
    <script type="text/javascript">window.dataLayer = window.dataLayer || [];</script>
}

<script type="text/javascript" src="https://LightStream.7eer.net/container-1695.js"></script>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script type="text/javascript">window.jQuery || document.write('<script src="/scripts/jquery-3.4.1.min.js"><\/script>')</script>

@Scripts.Render("~/bundles/foundation-global")
@Scripts.Render("~/bundles/es5-shim")
@Scripts.Render("~/bundles/es6-shim")
@Scripts.Render("~/bundles/scripts-app-main")

@Html.RenderScriptTag("~/bundles/scripts-marketing.js")
@Html.RegisteredScripts()
@Html.DeferredStyles()
@RenderSection("scripts", required: false)

@if (IsSectionDefined("QATools"))
{
    @RenderSection("QATools", required: false)
}
else
{
    { Html.RenderAction("Environment", "Components"); }
}

@{
    bool logClientSideErrors = Convert.ToBoolean(System.Configuration.ConfigurationManager.AppSettings["LogClientSideErrors"]);
}

@if (logClientSideErrors)
{
    <script src="/scripts/app/log-errors.js" type="text/javascript"></script>
}

@if (IsSectionDefined("analytics"))
{
    @RenderSection("analytics", required: false);
}

<script src="~/Scripts/webcomponents/components.js?cachebust=@(Model.GetFileHash("scripts/webcomponents/components.js"))"></script>


</body>

</html>

<script>
    window.addEventListener("load", setBackgroundColor);
    window.addEventListener("resize", setBackgroundColor);
    function setBackgroundColor() {
        var input = document.getElementById("UserPassword");
        var heightFromTop = window.pageYOffset + input.getBoundingClientRect().top;
        document.body.style.background = "linear-gradient(to bottom, #d4eefc " + heightFromTop + "px, #fff " + heightFromTop + "px,#fff)";
    }
</script>
<script src="~/scripts/app/mouse-leave-window-popup.js" type="text/javascript"></script>

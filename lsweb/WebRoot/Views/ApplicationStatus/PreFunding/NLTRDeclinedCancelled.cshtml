@model LightStreamWeb.Models.PreFunding.PreFundingNLTRPageModel

<section class="row panel">
    <div class="medium-9 columns">
        <div class="row ">
            <div class="medium-12 columns ">
                <h2 class="brand">@Model.Heading</h2>

                @foreach (var statement in Model.Statements)
                {
                    <p>@Html.Raw(statement)</p>
                }
            </div>
        </div>

        <br />

        <div class="row">
            <div class="medium-6 columns ">
                <h2 class="brand">Previous Loan Terms:</h2>
            </div>
            <div class="medium-6 columns ">
                <a href="#" data-open="RatesModal" class="right no-track" target="_self">View @((Model.PurposeOfLoanIsSecured()) ? "Secured Auto" : "") Rates / Terms</a>
            </div>
        </div>

        <div class="row ">
            <div class="medium-9 columns ">
                <div class="offerTermsTable " id="OfferTermsTable">
                    <div class="grid-x">
                        <div class="cell small-6 coltitle brand hide-for-small-only">Loan Terms</div>
                        <div class="cell small-6 coltitle coltitle-last brand hide-for-small-only">Requested</div>
                    </div>
                    <div class="grid-x">
                        <div class="cell small-6 brand">Loan Amount</div>
                        <div class="cell small-6">
                            @Model.LoanTerms.LoanAmount.ToString("C")  @if (Model.LoanTerms.FloridaDocStampTax.HasValue)
                            { @:<super><a href="" data-flash="FloridaDocStampDisclosure">**</a></super>
                                }
                        </div>
                    </div>
                    <div class="grid-x">
                        <div class="cell small-6 brand">Loan Term</div>
                        <div class="cell small-6">@Model.LoanTerms.LoanTerm months</div>
                    </div>
                    <div class="grid-x ">
                        <div class="cell small-6 brand">Interest Rate/APR</div>
                        <div class="cell small-6">@Model.LoanTerms.InterestRate</div>
                    </div>
                    <div class="grid-x ">
                        <div class="cell small-6 brand">Monthly Payment</div>
                        <div class="cell small-6">@Model.LoanTerms.MonthlyPayment</div>
                    </div>
                    <div class="grid-x">
                        <div class="cell small-6 brand">Payment method</div>
                        <div class="cell small-6">@Model.LoanTerms.PaymentMethod</div>
                    </div>

                    <p class="disclaimer">@Html.Raw(Model.LoanTerms.LoanOfferDisclaimer)</p>

                    @if (Model.LoanTerms.FloridaDocStampTax.HasValue)
                        {
                    <p class="loannotes"><super>**</super> @Html.Raw(string.Format(Resources.FAMessages.FloridaDocStampDisclosure, "/partial/florida-doc-stamp-info", Model.LoanTerms.FloridaDocStampTax.Value))</p>
                        }
                </div>

                <div class="row ">
                    <div class="medium-12 columns ">
                        @if (Model.NextStep == LightStreamWeb.Models.PreFunding.PreFundingNLTRPageModel.NextSteps.ProceedToLoanAgreement)
                            {
                            <a href="/appstatus/prefunding/signloanagreement?ctx=@Model.Ctx" class="button">Proceed To Loan Agreement</a>
                            }
                            else
                            {
                            <form method="post" action="/appstatus/prefunding/acceptpreviousterms">
                                <input type="submit" class="button" value="Continue with Previous Terms" />
                            </form>
                            }
                    </div>
                </div>
            </div>
            <div class="medium-3 columns ">
                @if (Model.HasDeclineNotice())
            {
                    <br/>
                    @:<a href="#" data-href="/enotices/modal" data-suppress="CreditScoreDisclosureHtml" data-popup="true" class="button button-medium button-navy button-small first">View Decline Notice</a>
    }
            </div>

        </div>
    </div>
</section>

<section class="row ruled">
	<div class="large-9 columns">
	    <h2 class="brand">Cancel Pending Loan </h2>
	    <p>To cancel your pending loan, you may click the button below.</p>

        <a href="/appstatus/prefunding/cancel" class="button button-navy button-medium">Cancel Pending Loan</a>
	
        <img src="@Model.CdnBaseUrl/ajax-loader.gif" id="LoadingImage" alt="" style="display:none;"/>
	</div>
</section>                


@section scripts {
    @Html.Partial("~/Views/ApplicationStatus/PreFunding/_EnabledConfirmSignOut.cshtml")
}
@model LightStreamWeb.Models.Apply.ApplyPageModel

<section class="row">
    <div class="large-6 columns">
        <h1 tabindex="0">Loan Application</h1>
        <p class="hide-for-small-only">&nbsp;</p>
    </div>
</section>

@Html.Partial("~/Views/Apply/Partials/_ProgressBar.cshtml", new LightStreamWeb.Models.Apply.ProgressBarModel(3))

<section class="row">
    <div class="large-12 columns" tabindex="0">
        <p class="note"><sup>*</sup>indicates required field</p>
    </div>
</section>

@LoanApplicationForm.StartForm("reserveUserId('/apply/confirm', 3)")

<div class="row" tabindex="0">
    <div class="large-12 columns" ng-cloak ng-show="LoanApp.UserCredentials.IsTemporary === false">
        <p>
            For security purposes, we ask that you create a user ID and password, and select a security question and answer.
            The user ID and password will be required to access your account.
            The security question and answer will be used, in certain situations, for additional verification.
        </p>
        <p>Please remember and secure this information.</p>
    </div>

    @Html.Partial("~/Views/Apply/Partials/_TemporaryUserNameMessage.cshtml")

</div>


@Html.Partial("~/Views/Apply/Partials/_UserCredentials.cshtml")

<div class="row" style="margin-top:1rem">
    <div class="large-12 columns">
        <p ng-class="{'error-message':LoanApp.UserIdNotReserved==true}" tabindex="0">Be sure to click Continue when you are ready to Confirm and Submit your application.</p>
    </div>
</div>
@LoanApplicationForm.EndForm()

@section scripts {
    <script type="text/javascript">
        SC.apply.securityInfo();
    </script>
    <script src="~/scripts/app/mouse-leave-window-popup.js" type="text/javascript"></script>
}
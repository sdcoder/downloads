<div class="row">
    <div class="medium-6 columns">
        <label><sup>*</sup>Address of Property Being Improved</label>
        <input type="text"
               id="SubjectPropertyAddress"
               name="SubjectPropertyAddress"
               aria-label="Type in property street address."
               ng-model="LoanApp.HmdaComplianceProperty.Address.AddressLine"
               ng-pattern="/^(?=.*[a-zA-Z])(?=.*\d)[\d|r].*$/"
               maxlength="50"
               ng-disabled="LoanApp.SubjectPropertySameAsResidentAddress && LoanApp.HmdaComplianceProperty.Address.AddressLine"
               ls-track-visited
               required>
        <div class="formalert" tabindex="0" ng-cloak ng-show="LoanApplication.SubjectPropertyAddress.$hasVisited && LoanApplication.SubjectPropertyAddress.$error.pattern">
            <p>Please enter complete address with both street name and number.</p>
        </div>
    </div>

    <div class="medium-3 columns">
        <label for="State">Apt etc</label>
        @(Html.NgDropDownSelectList(
                    "LoanApp.HmdaComplianceProperty.Address.SecondaryUnit.Type",
                    "SubjectPropertySecondaryUnitType",
                    "If needed. Select apartment, suite, unit, or leave blank.",
                    FirstAgain.Domain.Lookups.FirstLook.PostalAddressSecondaryUnitTypeLookup.GetFilteredList(FirstAgain.Domain.Lookups.FirstLook.PostalAddressSecondaryUnitTypeLookup.FilterType.Home),
                    "LoanApp.HmdaComplianceProperty.Address.SecondaryUnit.Value",
                    new { @ng_disabled = "LoanApp.SubjectPropertySameAsResidentAddress && LoanApp.HmdaComplianceProperty.Address.SecondaryUnit.Type && LoanApp.HmdaComplianceProperty.Address.SecondaryUnit.Type != 'NotSelected'" }))
    </div>
    <div class="medium-3 columns">
        <label>&nbsp;</label>
        <input type="text"
               id="SubjectPropertySecondaryUnitValue"
               maxlength="10"
               ng-model="LoanApp.HmdaComplianceProperty.Address.SecondaryUnit.Value"
               aria-label="If needed. Enter apartment, suite, unit number."
               ng-disabled="LoanApp.SubjectPropertySameAsResidentAddress && LoanApp.HmdaComplianceProperty.Address.SecondaryUnit.Value"
               ng-show="LoanApp.HmdaComplianceProperty.Address.SecondaryUnit.Type && LoanApp.HmdaComplianceProperty.Address.SecondaryUnit.Type != 'NotSelected'"
               ng-required="LoanApp.HmdaComplianceProperty.Address.SecondaryUnit.Type && LoanApp.HmdaComplianceProperty.Address.SecondaryUnit.Type != 'NotSelected'">
    </div>
</div>
<div class="row">
    <div class="medium-6 columns">
        <label><sup>*</sup>City</label>
        <input type="text"
               id="SubjectPropertyCity"
               ng-model="LoanApp.HmdaComplianceProperty.Address.City"
               aria-label="Type in the city."
               maxlength="50"
               ls-restrict-to-pattern ng-pattern="/^[A-Za-z\' \-/.]+$/"
               ng-disabled="LoanApp.SubjectPropertySameAsResidentAddress && LoanApp.HmdaComplianceProperty.Address.City"
               required>
    </div>
    <div class="medium-3 columns">
        <label for="State">State</label>
        @(Html.NgDropDownEnumList(
                    "LoanApp.HmdaComplianceProperty.Address.State",
                    "SubjectPropertyState",
                    "Select the state.",
                    FirstAgain.Domain.Lookups.FirstLook.StateLookup.BindingSource,
                    true,
                    new { @ng_disabled = "LoanApp.SubjectPropertySameAsResidentAddress && LoanApp.HmdaComplianceProperty.Address.State && LoanApp.HmdaComplianceProperty.Address.State != 'NotSelected'" }))
    </div>
    <div class="medium-3 columns">
        <label for="HmdaComplianceProperty.Address.ZipCode"><sup>*</sup>Zip Code</label>
        @LSForm.ZipCode(nameAndId: "SubjectPropertyZipCode",
                             ngModel: "LoanApp.HmdaComplianceProperty.Address.ZipCode",
                             ariaLabel: "Enter the zip code.",
                             required: true,
                             ngDisabled: "LoanApp.SubjectPropertySameAsResidentAddress && LoanApp.HmdaComplianceProperty.Address.ZipCode")
    </div>
</div>
<div class="row" tabindex="0" ng-show="LoanApplication.SubjectPropertyZipCode.$dirty && LoanApplication.SubjectPropertyZipCode.$error.notFound" class="formalert" ng-cloak>
    <div class="medium-8 columns formalert" tabindex="0">
        <p>Zip code not found.</p>
    </div>
</div>

